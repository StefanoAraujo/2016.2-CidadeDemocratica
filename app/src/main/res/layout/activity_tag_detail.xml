<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.TagDetailActivity"
    android:background="@color/colorPrimary">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="55dp"
       android:background="#fff"
       android:layout_marginTop="9dp">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:text="@string/activity_tag_detail"
           android:id="@+id/proposalsWithTextView"
           android:textStyle="bold"
           android:layout_marginLeft="12dp"
           android:layout_centerVertical="true"
           />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:text="Tag"
           android:id="@+id/tagNameTextView"
           android:layout_margin="12dp"
           android:layout_toRightOf="@+id/proposalsWithTextView"
           android:textStyle="bold"
           android:layout_centerVertical="true"/>
   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcfbfb"
        android:layout_marginTop="15px">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"></FrameLayout>
    </RelativeLayout>
</LinearLayout>
