<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/titleProposalID"

            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relevância:"
            android:layout_marginRight="5dp"
            android:id="@+id/relevance_text"
            android:textColor="#080808"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/titleProposalID"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="relevancia"
            android:id="@+id/relevanceTextView"
            android:textColor="#000000"
            android:layout_toRightOf="@id/relevance_text"
            android:layout_below="@+id/titleProposalID"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descriçao da Proposta"
            android:id="@+id/proposalDescripitionID"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/relevance_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#080808"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/titulo_tags_da_proposta"
            android:id="@+id/tituloTagginsID"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#080808"
            android:textSize="18dp" />

    </RelativeLayout>

</LinearLayout>