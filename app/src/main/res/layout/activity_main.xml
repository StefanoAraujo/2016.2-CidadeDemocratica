<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:id="@+id/tagsButton"
            android:onClick="showTagsList"
            android:layout_marginBottom="-9dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_icon"
            android:elevation="2dp"
            android:layout_centerInParent="true"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:id="@+id/proposalButton"
            android:onClick="showProposalList"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="-1dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/proposal_icon"
            android:elevation="2dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:id="@+id/userButton"
            android:padding="0dp"
            android:onClick="showUsersList"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_icon"
            android:elevation="2dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    </LinearLayout>



